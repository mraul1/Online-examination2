<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="col-md-4">Content</th>
      <th class="col-md-4">Answer</th>
      <th class="col-md-1">Marks</th>
      <th class="col-md-3"></th>
    </tr>
  </thead>

  <tbody>
    <% questions.each do |question| %>
		  <tr>
		    <td><%= question.content %></td>
		    <td><%= question.answer %></td>
		    <td><%= question.marks %></td>
		    <td><center>
		    <%= link_to 'Edit', edit_exam_question_path(@exam,question),{class:"btn btn-primary",style:"background:#2c3e50;border:1px solid #2c3e50;"} %>
		    <%= link_to 'Destroy', exam_question_path(@exam,question), method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></center></td>
		  </tr>
		<% end %>
  </tbody>
</table>
		
		